      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <style>
    .table {
      float:right;
      border:1;
      padding-right:10%;
      
      
  }
  </style>
  
  <div class=table >
  
  <table cellspacing="5" border="1">
    <tr>
      <th>ID Number</th>
      <th>Name</th>
    </tr>
    <% @fraternities = Fraternity.all %>
    <% @fraternities.each do |i| %>
      <tr>
        <td><%= i.id %></td>
        <td><%= i.name %></td>
      </tr>
    <% end %>
  </table>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    Fraternity ID<br>
    <%= f.text_field :fraternity_id %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  
  
  
